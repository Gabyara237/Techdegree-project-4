{{#partial "content"}}
        <section>
            <div class="container">
                <div class="entry-list single">
                    <article>
                        <h1>{{entry.title}}</h1>
                        <time datetime="2016-01-31 1:00">{{entry.date}}</time>
                        <p>
                            {{#each entry.tags}}
                                <span class="tag">{{this}}</span>
                            {{/each}}
                        </p>
                        <div class="entry">
                            <p>{{entry.content}}</p>
                            <p><a class="link" href="/edit/{{entry.slug}}">Edit Entry</a></p>
                            <form action="/delete/{{entry.slug}}" method="POST" >
                                <button type="submit" class="delete-button">Delete Entry</button>
                            </form>
                        </div>
                    </article>
                </div>
            </div>
        </section>
        <section class="entry-comments">
            <div class="container">
                    <h2>Comments</h2>
                    <div class="comment">
                        {{#each entry.comments}}
                            <strong>{{author}}</strong>
                            <time datetime="2016-01-31 1:00">{{date}}</time>
                            <p>{{content}}</p>
                        {{/each}}
                            </div>
                    <div class="new-comment">
                        <form action="/detail/{{entry.slug}}" method="POST">
                              <label for="name">Name</label>
                              <input type="text" name="name" id="name"><br>
                              <label for="comment">Comment</label>
                              <textarea rows="5" name="comment" id="comment"></textarea>
                              <input type="submit" value="Post Comment" class="button">
                        </form>
                    </div>
            </div>
        </section>
{{/partial}}
{{> base.hbs}}