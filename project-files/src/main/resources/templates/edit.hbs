{{#partial "content"}}
        <section>
            <div class="container">
                <div class="edit-entry">
                    <h2>Edit Entry</h2>
                    <form action="/edit/{{entry.slug}}" method="POST">
                        <label for="title"> Title</label>
                        <input type="text" name="title" id="title" value="{{entry.title}}" required><br>
                        <label for="entry">Entry</label>
                        <textarea rows="5" name="entry" id="entry" required>{{entry.content}}</textarea>
                        <input type="submit" value="Save Entry" class="button">
                        <a href="#" class="button button-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </section>
{{/partial}}
{{>base.hbs}}